<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TableDotGroup.Tischgruppen"
             Title="Tischgruppen">

    <StackLayout Padding="0,50,0,0">
        
        <Label Text="Wie viele Tischruppen sollen erstellt werden?" HorizontalOptions="Center"/>
        <Stepper x:Name="stepperDreier" InputTransparent="False" Margin="0,50,0,0" Maximum="15" Minimum="1" ValueChanged="Stepper_ValueChanged" HorizontalOptions="Center"/>
        <Label HorizontalOptions="Center" Text="{Binding Source={x:Reference stepperDreier}, Path=Value}" FontSize="18"/>
    </StackLayout>
    

</ContentPage>