<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TableDotGroup.Schüler"
             Title="Schüler">
    <StackLayout x:Name="layout" >
        <Label x:Name="label" Text="Bitte trage die Namen der Schüler, getrennt durch Kommata ein:" FontSize="Medium" Margin="0,20,0,20" />
        <BoxView x:Name="trennung" Color="Gray" HeightRequest="2" />
        <Editor x:Name="names" Text="Schreib etwas..."  />
        <Button Text="Weiter" Clicked="Button_Clicked" />
    </StackLayout>
</ContentPage>